{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": [
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ESNext"
    ],
    "strict": true,
    "noImplicitAny": true,
    "outDir": "types",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
